<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/favourite_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Except the Heaven had come so near"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@id/favourite_item_author"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/favourite_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emily Dickinson"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@id/favourite_item_poem"
            app:layout_constraintTop_toBottomOf="@id/favourite_item_title" />

        <TextView
            android:id="@+id/favourite_item_poem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="tgfhrth rtrh tr htrh rth rth rth rth thrt hrt h rt h r"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favourite_item_author" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>